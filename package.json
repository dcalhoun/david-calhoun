{
  "name": "davidcalhoun",
  "version": "2.0.0",
  "description": "Personal site of David Calhoun.",
  "main": "index.js",
  "scripts": {
    "build": "yarn content && next build && next export",
    "content": "processmd posts/**/*.md --preview 110 --highlightCode --summaryOutput .content/summary.json --outputDir .content",
    "predeploy": "yarn build && touch ./out/.nojekyll && mv ./out/static/CNAME ./out",
    "deploy": "gh-pages -d ./out -b master -t",
    "precommit": "lint-staged",
    "start": "yarn content && node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dcalhoun/dcalhoun.github.io.git"
  },
  "author": "David Calhoun",
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/dcalhoun/dcalhoun.github.io/issues"
  },
  "homepage": "http://davidcalhoun.me",
  "devDependencies": {
    "babel-plugin-transform-define": "^1.3.0",
    "babel-plugin-wrap-in-js": "^1.1.1",
    "gh-pages": "^1.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.3",
    "prettier": "^1.5.3",
    "processmd": "^3.1.4",
    "prop-types": "^15.5.10",
    "raw-loader": "^0.5.1",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "chroma-js": "^1.3.4",
    "highlightjs": "^9.10.0",
    "next": "^3.0.1-beta.8",
    "preact": "^8.2.1",
    "preact-compat": "^3.17.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-ga": "^2.2.0",
    "react-lowlight": "^1.1.1",
    "react-markdown": "^2.5.0",
    "styletron-client": "^2.5.7",
    "styletron-react": "^2.5.8",
    "styletron-server": "^2.5.7"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --no-semi --write",
      "standard --fix",
      "git add"
    ]
  },
  "standard": {
    "globals": [
      "__DEV__",
      "__ENV__"
    ]
  }
}
