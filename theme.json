{
  "version": 2,
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "settings": {
    "layout": {
      "contentSize": "40rem",
      "wideSize": "64rem"
    },
    "color": {
      "defaultPalette": false,
      "defaultGradients": false,
      "palette": [
        {
          "slug": "primary",
          "name": "Accent 1",
          "color": "#2563eb"
        }
      ]
    },
    "spacing": {
      "blockGap": true,
      "spacingScale": {
        "steps": 7
      },
      "spacingSizes": [
        {
          "size": "min(20px, 1vw)",
          "slug": "10",
          "name": "1"
        },
        {
          "size": "min(30px, 2vw)",
          "slug": "20",
          "name": "2"
        },
        {
          "size": "min(40px, 4vw)",
          "slug": "30",
          "name": "3"
        },
        {
          "size": "min(50px, 6vw)",
          "slug": "40",
          "name": "4"
        },
        {
          "size": "min(60px, 10vw)",
          "slug": "50",
          "name": "5"
        },
        {
          "size": "min(70px, 12vw)",
          "slug": "60",
          "name": "6"
        },
        {
          "size": "min(80px, 14vw)",
          "slug": "70",
          "name": "7"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Newsreader,ui-serif,serif",
          "name": "Primary",
          "slug": "primary"
        },
        {
          "fontFamily": "Inter,ui-sans-serif,sans-serif",
          "name": "Alternate",
          "slug": "alternate"
        }
      ],
      "fontSizes": [
        {
          "name": "Small",
          "size": "clamp(0.75rem, 0.75vw, 1rem)",
          "slug": "small"
        },
        {
          "name": "Base",
          "size": "clamp(1rem, 1vw, 1.25rem)",
          "slug": "base"
        },
        {
          "name": "Medium",
          "size": "clamp(1.5rem, 1.5vw, 2rem)",
          "slug": "medium"
        },
        {
          "name": "Large",
          "size": "clamp(2rem, 2vw, 2.5rem)",
          "slug": "large"
        },
        {
          "name": "Huge",
          "size": "clamp(2.5rem, 10vw, 4rem)",
          "slug": "huge"
        }
      ]
    }
  },
  "styles": {
    "blocks": {
      "core/navigation": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--base)"
        }
      },
      "core/site-title": {
        "elements": {
          "link": {
            "typography": {
              "textDecoration": "none"
            }
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      }
    },
    "elements": {
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--huge)",
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontWeight": "normal",
          "lineHeight": "1.2"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontWeight": "normal"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontWeight": "normal"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--base)",
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontWeight": "normal",
          "letterSpacing": "0.1em",
          "textTransform": "uppercase"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--base)",
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontWeight": "bold"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      }
    },
    "spacing": {
      "blockGap": "var(--wp--preset--spacing--30)",
      "padding": {
        "right": "var(--wp--preset--spacing--30)",
        "left": "var(--wp--preset--spacing--30)"
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--primary)",
      "fontSize": "var(--wp--preset--font-size--base)"
    }
  },
  "customTemplates": [
    {
      "name": "hidden-title",
      "title": "Hidden Title",
      "postTypes": ["page", "post"]
    }
  ],
  "templateParts": [
    {
      "area": "header",
      "name": "header",
      "title": "Header"
    },
    {
      "area": "footer",
      "name": "footer",
      "title": "Footer"
    }
  ]
}
