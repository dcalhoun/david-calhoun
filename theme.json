{
  "version": 2,
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "settings": {
    "custom": {
      "fontSize": {
        "huge": "clamp(2.5rem, 10vw, 4rem)"
      }
    },
    "layout": {
      "contentSize": "40rem",
      "wideSize": "64rem"
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "ui-serif,Georgia,Cambria,Times New Roman,Times,serif",
          "name": "Heading",
          "slug": "heading"
        },
        {
          "fontFamily": "ui-serif,Georgia,Cambria,Times New Roman,Times,serif",
          "name": "Body",
          "slug": "body"
        }
      ],
      "fontSizes": [
        {
          "name": "Base",
          "size": "1rem",
          "slug": "base"
        },
        {
          "name": "Large",
          "size": "1.5rem",
          "slug": "large"
        }
      ]
    }
  },
  "styles": {
    "blocks": {
      "core/post-title": {
        "typography": {
          "fontSize": "var(--wp--custom--font-size--huge)",
          "fontFamily": "var(--wp--preset--font-family--heading)"
        }
      }
    },
    "elements": {
      "h1": {
        "spacing": {
          "margin": {
            "top": "0"
          }
        }
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--body)",
      "fontSize": "clamp(var(--wp--preset--font-size--base), 10vw, var(--wp--preset--font-size--large))"
    }
  },
  "templateParts": [
    {
      "area": "header",
      "name": "header",
      "title": "Header"
    }
  ]
}
