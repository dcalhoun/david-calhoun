{
  "version": 2,
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "settings": {
    "custom": {
      "fontSize": {
        "huge": "clamp(2.5rem, 10vw, 4rem)"
      }
    },
    "layout": {
      "contentSize": "44ch",
      "wideSize": "64rem"
    },
    "color": {
      "defaultPalette": false,
      "defaultGradients": false,
      "palette": [
        {
          "slug": "primary",
          "name": "Accent 1",
          "color": "#2563eb"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "ui-serif,Georgia,Cambria,Times New Roman,Times,serif",
          "name": "Heading",
          "slug": "heading"
        },
        {
          "fontFamily": "ui-serif,Georgia,Cambria,Times New Roman,Times,serif",
          "name": "Body",
          "slug": "body"
        }
      ],
      "fontSizes": [
        {
          "name": "Small",
          "size": "0.75rem",
          "slug": "small"
        },
        {
          "name": "Base",
          "size": "1rem",
          "slug": "base"
        },
        {
          "name": "Large",
          "size": "1.5rem",
          "slug": "large"
        }
      ]
    }
  },
  "styles": {
    "blocks": {
      "core/site-title": {
        "elements": {
          "link": {
            "typography": {
              "textDecoration": "none"
            }
          }
        },
        "typography": {
          "fontSize": "var(--wp--custom--font-size--small)",
          "fontFamily": "var(--wp--preset--font-family--heading)"
        }
      }
    },
    "elements": {
      "h1": {
        "spacing": {
          "margin": {
            "top": "0"
          }
        },
        "typography": {
          "fontSize": "var(--wp--custom--font-size--huge)",
          "fontFamily": "var(--wp--preset--font-family--heading)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--body)",
      "fontSize": "clamp(var(--wp--preset--font-size--base), 10vw, var(--wp--preset--font-size--large))"
    }
  },
  "customTemplates": [
    {
      "name": "page-no-title",
      "title": "Page (No Title)",
      "postTypes": ["page"]
    }
  ],
  "templateParts": [
    {
      "area": "header",
      "name": "header",
      "title": "Header"
    }
  ]
}
