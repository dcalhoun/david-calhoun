{
  "version": 2,
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "settings": {
    "layout": {
      "contentSize": "40rem",
      "wideSize": "64rem"
    },
    "color": {
      "defaultPalette": false,
      "defaultGradients": false,
      "palette": [
        {
          "slug": "primary",
          "name": "Primary",
          "color": "#943131"
        },
        {
          "slug": "background",
          "name": "Background",
          "color": "#f9f9f8"
        },
        {
          "slug": "foreground",
          "name": "Foreground",
          "color": "#344334"
        },
        {
          "slug": "offset",
          "name": "Offset",
          "color": "#eceeeb"
        },
        {
          "slug": "separator",
          "name": "Separator",
          "color": "#d0d4d0"
        }
      ]
    },
    "spacing": {
      "blockGap": true,
      "spacingScale": {
        "steps": 7
      },
      "spacingSizes": [
        {
          "size": "min(20px, 1vw)",
          "slug": "10",
          "name": "1"
        },
        {
          "size": "min(30px, 2vw)",
          "slug": "20",
          "name": "2"
        },
        {
          "size": "min(40px, 4vw)",
          "slug": "30",
          "name": "3"
        },
        {
          "size": "min(50px, 6vw)",
          "slug": "40",
          "name": "4"
        },
        {
          "size": "min(60px, 10vw)",
          "slug": "50",
          "name": "5"
        },
        {
          "size": "min(70px, 12vw)",
          "slug": "60",
          "name": "6"
        },
        {
          "size": "min(80px, 14vw)",
          "slug": "70",
          "name": "7"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Newsreader,ui-serif,serif",
          "name": "Primary",
          "slug": "primary"
        },
        {
          "fontFamily": "Inter,ui-sans-serif,sans-serif",
          "name": "Alternate",
          "slug": "alternate"
        }
      ],
      "fontSizes": [
        {
          "name": "Small",
          "size": "clamp(0.75rem, 0.75vw, 1rem)",
          "slug": "small"
        },
        {
          "name": "Medium",
          "size": "clamp(1rem, 1.25vw, 1.625rem)",
          "slug": "medium"
        },
        {
          "name": "Large",
          "size": "clamp(1.25rem, 3.5vw, 2rem)",
          "slug": "large"
        },
        {
          "name": "X-Large",
          "size": "clamp(1.875rem, 2vw, 2.5rem)",
          "slug": "x-large"
        },
        {
          "name": "XX-Large",
          "size": "clamp(1.875rem, 8vw, 5.5rem)",
          "slug": "xx-large"
        }
      ]
    }
  },
  "styles": {
    "blocks": {
      "core/button": {
        "border": {
          "radius": "0.5rem"
        },
        "color": {
          "background": "var(--wp--preset--color--primary)"
        },
        "typography": {
          "letterSpacing": "0.05em"
        }
      },
      "core/code": {
        "border": {
          "width": "0"
        },
        "spacing": {
          "padding": {
            "top": "0",
            "right": "0",
            "bottom": "0",
            "left": "0"
          }
        }
      },
      "core/post-terms": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)"
        }
      },
      "core/post-date": {
        "color": {
          "background": "var(--wp--preset--color--offset)",
          "text": "var(--wp--preset--color--foreground)"
        },
        "border": {
          "radius": "0.5rem"
        },
        "spacing": {
          "padding": {
            "top": "0.125rem",
            "right": "0.5rem",
            "bottom": "0.125rem",
            "left": "0.5rem"
          }
        }
      },
      "core/post-excerpt": {
        "typography": {
          "fontStyle": "italic"
        }
      },
      "core/navigation": {
        "elements": {
          "link": {
            "typography": {
              "textDecoration": "underline"
            }
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "core/search": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontSize": "var(--wp--preset--font-size--medium)"
        }
      },
      "core/site-title": {
        "elements": {
          "link": {
            "typography": {
              "textDecoration": "none"
            }
          }
        },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)"
        }
      }
    },
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--foreground)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontWeight": "normal",
          "lineHeight": "1.2",
          "letterSpacing": "-0.0125em"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontWeight": "normal"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontWeight": "normal"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontWeight": "normal",
          "letterSpacing": "0.1em",
          "textTransform": "uppercase"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--medium)",
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontWeight": "bold"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      }
    },
    "spacing": {
      "blockGap": "var(--wp--preset--spacing--30)",
      "padding": {
        "right": "var(--wp--preset--spacing--30)",
        "left": "var(--wp--preset--spacing--30)"
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--primary)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.625"
    }
  },
  "customTemplates": [
    {
      "name": "hidden-title",
      "title": "Hidden Title",
      "postTypes": ["page", "post"]
    }
  ],
  "templateParts": [
    {
      "area": "header",
      "name": "header",
      "title": "Header"
    },
    {
      "area": "footer",
      "name": "footer",
      "title": "Footer"
    }
  ]
}
